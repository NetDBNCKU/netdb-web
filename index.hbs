<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{{title}}</title>
    <link rel="stylesheet" href="./css/main.css" type="text/css" media="all" />
    <link rel="stylesheet" href="./css/font-awesome.min.css" type="text/css" media="all" />
  </head>
  <body>
    <div id="menu">
      <div id="menu-other">
      </div>
      <div id="menu-bar">
        <ul>
          <li>
            <a href="#about">
              {{about-title}}
            </a>
          </li>
          <li>
            <a href="#project">
              {{project-title}}
            </a>
          </li>
          <li>
            <a href="#member">
              {{member-title}}
            </a>
          </li>
        </ul>
        <span>
          <i class="fa fa-times menu-close"></i>
        </span>
      </div>
    </div>
    <header id=header>
      <h3><a href="#banner">{{header-title}}</a></h3>
      <nav id="nav">
        <ul id="ul-desktop">
          <li>
            <a href="#about">
              {{about-title}}
            </a>
          </li>
          <li>
            <a href="#project">
              {{project-title}}
            </a>
          </li>
          <li>
            <a href="#member">
              {{member-title}}
            </a>
          </li>
        </ul>
        <ul id="ul-tablet">
          <li>
            <span>
              {{menu-title}}
              <i class="fa fa-bars"></i>
            </span>
          </li>
        </ul>
      </nav>
    </header>
    <section id="banner">
      <div class="inner">
        <h2>{{banner-title}}</h2>
        <p>{{banner-intro}}</p>
      </div>
      <div class="more">
        <a href="#about">
        <i class="fa fa-chevron-circle-down fa-3x"></i>
        </a>
      </div>
    </section>
    <section id="about">
      <h2>{{about-title}}</h2>
      <div id="description">{{about-description}}</div>
      <div class="cards">
        <div class="aboutCard">
          <img src={{about-research-field-img-1}} alt={{about-research-field-alt-1}}></img>
          <h4>{{about-research-field-1}}</h4>
        </div>
      <div class="aboutCard">
        <img src={{about-research-field-img-2}} alt={{about-research-field-alt-2}}></img>
        <h4>{{about-research-field-2}}</h4>

      </div>
      <div class="aboutCard">
        <img src={{about-research-field-img-3}} alt={{about-research-field-alt-3}}></img>
        <h4>{{about-research-field-3}}</h4>
        </div>
      </div>
    </section>
    <section id="project">
      <h2>{{project-title}}</h2>
      <div class="projectCard">
        
        <img src={{project-item-img-1}} alt={{project-item-alt-1}}></img>
        <div class="projectInfo">
        <h4>{{project-item-1}}</h4>
        <h5>{{project-item-description-1}}</h5>
        </div>
      </div>
      <div class="projectCard">
        
        <img src={{project-item-img-2}} alt={{project-item-alt-2}}></img>
        <div class="projectInfo">
        <h4>{{project-item-2}}</h4>
        <h5>{{project-item-description-2}}</h5>
        </div>
      </div>
      <div class="projectCard">
        <img src={{project-item-img-3}} alt={{project-item-alt-3}}></img>
        <div class="projectInfo">
        <h4>{{project-item-3}}</h4>
        <h5>{{project-item-description-3}}</h5>
        </div>
      </div>
    </section>
    <section id="member">
      <h2>{{member-title}}</h2>
      <div class="memberListTitle">
        <h3>{{current-member-title}}</h3>
        <div class="titleDecoration" id="currentMemberDecoration"></div>
      </div>
      <div class="memberList">
        {{#each current-member-list}}
        <div class="memberCard">
          <img src={{imageURL}}/>
          <h4>{{Name}}</h4>
          <h5>{{Specialty}}</h5>
        </div>
        {{/each}}
      </div>

      <div class="memberListTitle">
        <h3>{{alumni-member-title}}</h3>
        <div class="titleDecoration" id="alumniDecoration"></div>
      </div>
      <div class="memberList">
        <h4>{{#each current-member-list}}{{Name}}{{Specialty}}{{/each}}</h4>
      </div>
    </section>
    <footer>
    
    </footer>
  </body>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="index.js"></script>
</html>

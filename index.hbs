<!DOCTYPE html>
<html>
  {{> head}}

  <body>
    {{> menu}}
    {{> header}}
    {{> banner}}

    <section id="about">
      <h2>{{about-title}}</h2>
      <div id="description">{{about-description}}</div>
      <div class="cards">
        <div class="aboutCard">
          <img src={{about-research-field-img-1}} alt={{about-research-field-alt-1}}>
          <h4>{{about-research-field-1}}</h4>
          <p>{{about-research-field-1-desc}}</p>
        </div>
        <div class="aboutCard">
          <img src={{about-research-field-img-2}} alt={{about-research-field-alt-2}}>
          <h4>{{about-research-field-2}}</h4>
          <p>{{about-research-field-2-desc}}</p>
        </div>
        <div class="aboutCard">
          <img src={{about-research-field-img-3}} alt={{about-research-field-alt-3}}>
          <h4>{{about-research-field-3}}</h4>
          <p>{{about-research-field-3-desc}}</p>
        </div>
      </div>
    </section>
    <section id="project">
      <h2>{{project-title}}</h2>

      <div class="projectCard">
        <div class="projectCard-img">
          <img src={{project-item-img-1}} alt={{project-item-alt-1}}>
        </div>
        <div class="projectCard-info">
          <h3>{{project-item-1}}</h3>
          <p>{{project-item-description-1}}</p>
        </div>
      </div>
      <div class="projectCard">
        <div class="projectCard-img">
          <img src={{project-item-img-2}} alt={{project-item-alt-2}}>
        </div>
        <div class="projectCard-info">
          <h3>{{project-item-2}}</h3>
          <p>{{project-item-description-2}}</p>
        </div>
      </div>
      <div class="projectCard">
        <div class="projectCard-img">
          <img src={{project-item-img-3}} alt={{project-item-alt-3}}>
        </div>
        <div class="projectCard-info">
          <h3>{{project-item-3}}</h3>
          <p>{{project-item-description-3}}</p>
        </div>
      </div>
    </section>
    <section id="member">
      <h2>{{member-title}}</h2>
      <div class="memberContent">
        <div class="memberListTitle">
          <h3>{{current-member-title}}</h3>
          <div class="titleDecoration" id="currentMemberDecoration"></div>
        </div>
        <div class="memberList">
          {{#each current-member-list}}
            <div class="memberCard">
              <img src={{imageURL}} alt="">
              <h4>{{Name}}
                <a href="mailto:{{email}}">
                  <i class="fa fa-envelope-o" aria-hidden="true"></i>
                </a>
                <a href="{{github}}" target="_blank">
                  <i class="fa fa-github" aria-hidden="true"></i>
                </a>
              </h4>
              <p>{{Specialty}}</p>
            </div>
          {{/each}}
        </div>

        <!-- <div class="memberListTitle"> -->
          <!-- <h3>{{alumni-member-title}}</h3> -->
          <!-- <div class="titleDecoration" id="alumniDecoration"></div> -->
        <!-- </div> -->
        <!-- <div class="memberList"> -->
          <!-- <h4>{{#each current-member-list}}{{Name}}{{Specialty}}{{/each}}</h4> -->
        <!-- </div> -->
      </div>
    </section>

    {{> footer}}
  </body>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="index.js"></script>
</html>

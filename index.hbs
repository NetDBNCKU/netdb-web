<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{{title}}</title>
    <link rel="stylesheet" href="./css/main.css" type="text/css" media="all" />
    <link rel="stylesheet" href="./css/font-awesome.min.css" type="text/css" media="all" />
  </head>
  <body>
    <header id=header>
      <h3><a href="#banner">{{header-title}}</a></h3>
      <nav id="nav">
        <ul>
          <li>
            <a href="#about">
              {{about-title}}
            </a>
          </li>
          <li>
            <a href="#project">
              {{project-title}}
            </a>
          </li>
          <li>
            <a href="#member">
              {{member-title}}
            </a>
          </li>
        </ul>
      </nav>
    </header>
    <section id="banner">
      <div class="inner">
        <h2>{{banner-title}}</h2>
        <p>{{banner-intro}}</p>
      </div>
      <div class="more">
        <a href="#about">
        <i class="fa fa-chevron-circle-down fa-3x"></i>
        </a>
      </div>
    </section>
    <section id="about">
      <h2>{{about-title}}</h2>
      <div id="description">{{about-description}}</div>
      <div class="cards">
        <div class="aboutCard">
          <img src="" alt={{about-research-field-alt-1}}></img>
          <h4>{{about-research-field-1}}</h4>
        </div>
      <div class="aboutCard">
        <img src="" alt={{about-research-field-alt-2}}></img>
        <h4>{{about-research-field-2}}</h4>

      </div>
      <div class="aboutCard">
        <img src="" alt={{about-research-field-alt-3}}></img>
        <h4>{{about-research-field-3}}</h4>
        </div>
      </div>
    </section>
    <section id="project">
      <h2>{{project-title}}</h2>
    </section>
    <section id="member">
      <h2>{{member-title}}</h2>
    </section>
    <footer>
    
    </footer>
  </body>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="index.js"></script>
</html>
